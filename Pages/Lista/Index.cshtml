@page
@model PageBook.Pages.Lista.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Minha Lista</h2>

<div class="float-right">
    <button class="btn btn-button btn-primary ">
        <a asp-page="Create">
            <span class="btn-white">
                <span class="glyphicon glyphicon-plus-sign" aria-hidden="true">
                </span>
            </span>
        </a>
    </button>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LISTA[0].Item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LISTA[0].DeadLine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LISTA[0].Info)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.LISTA) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Item)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeadLine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Info)
            </td>
            <td class="float-right">
                <button class="btn btn-button btn-primary ">
                    <a asp-page="./Edit" asp-route-id="@item.ID">
                        <span class="btn-white">
                            <span class="glyphicon glyphicon-edit" aria-hidden="true">
                            </span>
                        </span>
                    </a>
                </button>
                <button class="btn btn-button btn-primary ">
                    <a asp-page="./Details" asp-route-id="@item.ID">
                        <span class="btn-white">
                            <span class="glyphicon glyphicon-info-sign" aria-hidden="true">
                            </span>
                        </span>
                    </a>
                </button>
                <button class="btn btn-button btn-primary ">
                    <a asp-page="./Delete" asp-route-id="@item.ID">
                        <span class="btn-white">
                            <span class="glyphicon glyphicon-remove-sign" aria-hidden="true">
                            </span>
                        </span>
                    </a>
                </button>
            </td>
        </tr>
}
    </tbody>
</table>
