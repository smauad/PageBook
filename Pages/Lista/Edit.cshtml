@page
@model PageBook.Pages.Lista.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Editor de Lista</h2>


<hr />
<div class="row">
    <div class="col-lg-8">
        <img src="https://picsum.photos/700/500/?random" alt="Imagem" class="img-responsive" />
    </div>
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LISTA.ID" />
            <div class="form-group">
                <label asp-for="LISTA.Item" class="control-label"></label>
                <input asp-for="LISTA.Item" class="form-control" />
                <span asp-validation-for="LISTA.Item" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LISTA.DeadLine" class="control-label"></label>
                <input asp-for="LISTA.DeadLine" class="form-control" />
                <span asp-validation-for="LISTA.DeadLine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LISTA.Info" class="control-label"></label>
                <input asp-for="LISTA.Info" class="form-control" />
                <span asp-validation-for="LISTA.Info" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default float-right" />
            </div>
            <div>
                <a asp-page="./Index" class="btn btn-default float-right">Cancelar</a>
            </div>
        </form>
    </div>

</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
